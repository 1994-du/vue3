.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.container .chat-content {
  flex: 1;
  overflow-y: auto;
}
.container .chat-content .message-box {
  display: flex;
}
.container .chat-content .message-box .user {
  width: 100%;
  display: flex;
  margin-bottom: 30px;
}
.container .chat-content .message-box .user .el-avatar {
  margin: 0 5px;
  flex-shrink: 0;
}
.container .chat-content .message-box .user .info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.container .chat-content .message-box .isSelf {
  flex-direction: row-reverse;
}
.container .chat-content .message-box .message {
  padding: 5px;
  background-color: white;
  color: #000;
  border-radius: 5px;
}
.container .chat-bottom {
  height: 40px;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  position: sticky;
  bottom: 0;
  left: 0;
}
.container .chat-bottom .chat-input {
  margin-right: 15px;
}
