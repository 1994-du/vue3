.login_wrap {
  height: 100%;
  background-image: url('/static/image/login.jpg');
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_wrap .login_inner {
  width: 80vw;
  max-width: 800px;
  height: 80vh;
  max-height: 400px;
  display: flex;
  border-radius: 15px;
  box-shadow: 0px 0px 5px 1px #fff;
}
.login_wrap .login_inner .login_box,
.login_wrap .login_inner .registry_box {
  width: 50%;
}
.login_wrap .login_inner .login_box .login_c,
.login_wrap .login_inner .registry_box .login_c,
.login_wrap .login_inner .login_box .registry_c,
.login_wrap .login_inner .registry_box .registry_c {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.login_wrap .login_inner .login_box .login_c .ipts,
.login_wrap .login_inner .registry_box .login_c .ipts,
.login_wrap .login_inner .login_box .registry_c .ipts,
.login_wrap .login_inner .registry_box .registry_c .ipts {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.login_wrap .login_inner .login_box .login_c .ipts .el-input,
.login_wrap .login_inner .registry_box .login_c .ipts .el-input,
.login_wrap .login_inner .login_box .registry_c .ipts .el-input,
.login_wrap .login_inner .registry_box .registry_c .ipts .el-input {
  width: 90%;
  margin: 10px;
}
.login_wrap .login_inner .login_box .login_c .ipts .forget_password,
.login_wrap .login_inner .registry_box .login_c .ipts .forget_password,
.login_wrap .login_inner .login_box .registry_c .ipts .forget_password,
.login_wrap .login_inner .registry_box .registry_c .ipts .forget_password {
  font-size: 12px;
  color: #6a6a6a;
}
.login_wrap .login_inner .login_box .login_c .el-button,
.login_wrap .login_inner .registry_box .login_c .el-button,
.login_wrap .login_inner .login_box .registry_c .el-button,
.login_wrap .login_inner .registry_box .registry_c .el-button {
  width: 150px;
  padding: 18px 0;
  border-radius: 50px;
  font-size: 12px;
  background-color: #35729f;
  color: white;
  border-color: #35729f;
}
.login_wrap .login_inner .login_box .login_d,
.login_wrap .login_inner .registry_box .login_d,
.login_wrap .login_inner .login_box .registry_d,
.login_wrap .login_inner .registry_box .registry_d {
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.login_wrap .login_inner .login_box .login_d .el-button,
.login_wrap .login_inner .registry_box .login_d .el-button,
.login_wrap .login_inner .login_box .registry_d .el-button,
.login_wrap .login_inner .registry_box .registry_d .el-button {
  width: 150px;
  padding: 18px 0;
  border-radius: 50px;
  font-size: 12px;
  background-color: #35729f;
  color: white;
  border-color: #35729f;
}
.login_wrap .login_inner .login_box {
  border-radius: 15px 0 0 10px;
}
.login_wrap .login_inner .registry_box {
  border-radius: 0px 15px 15px 0;
}
.login_wrap .login_inner .active {
  background-color: #e9e9e9;
}
.login_wrap .login_inner .disactive {
  background: transparent;
}
